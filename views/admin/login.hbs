<div class="container" style="margin-top:20px;">
    <div class="header"><h2>User LOGIN</h2></div>
    <form class="row" action="/admin/login" method="post">
        <div class="col-md-4">
            <input name="user" type="text" placeholder="User" class="form-control" id="user">
        </div>
        <div class="col-md-4">
            <input name="pass" type="password" placeholder="Pass" class="form-control" id="pass">
        </div>
        <div class="col-12" style="margin-top:10px;">
            <button type="submit" class="btn btn-primary">Sign in</button>
        </div>
    </form>
    {{#if error}}
        <a class="btn" style="margin-top:10px;" href="/admin/login/logout">Error de Ingreso</a>
    {{/if }}
</div>
